{
  
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        "go install (?<depName>[^@]+)@(?<currentValue>[0-9a-zA-Z\.]+)"
      ],
      "datasourceTemplate": "go"
    }
  ],
  "timezone":"Europe/Brussels",
  "labels": ["dependencies"],
  "dependencyDashboardLabels": ["dependencies"],
  "lockFileMaintenance": { "enabled": true, "schedule": ["monthly"] },
  "schedule": ["monthly"]
}
